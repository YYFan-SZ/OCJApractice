/* 基础样式 */
.doing-main-container {
  min-height: 100vh;
  background: #f6f8fa;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 40rpx;
}

.doing-question-card {
  width: 92vw;
  max-width: 750rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx #dbeafe;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-bottom: 40rpx;
  padding: 48rpx 32rpx 48rpx 32rpx;
  border: none;
}

.doing-question-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #2d3a4b;
  margin-bottom: 24rpx;
}

.doing-question-content {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 32rpx;
  white-space: pre-line;
}

.doing-options {
  width: 100%;
  margin-bottom: 32rpx;
}

.doing-option {
  font-size: 28rpx;
  color: #3b3b7a;
  background: #f6f8fa;
  border-radius: 12rpx;
  padding: 18rpx 24rpx;
  margin-bottom: 18rpx;
}

.doing-option.selected {
  background: linear-gradient(90deg, #7bb7fa 0%, #b3d6f7 100%);
  color: #fff;
}

.doing-answer {
  font-size: 28rpx;
  color: #1e90ff;
  font-weight: 600;
  margin-top: 12rpx;
}

.doing-explanation {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
}

.doing-action-row {
  width: 92vw;
  max-width: 750rpx;
  display: flex;
  justify-content: flex-end;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.doing-btn {
  min-width: 160rpx;
  height: 64rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  background: #e0e7ef;
  color: #393a7a;
  border: none;
  font-weight: 600;
}

.doing-btn.main {
  background: linear-gradient(90deg, #7bb7fa 0%, #b3d6f7 100%);
  color: #fff;
}

/* 预览按钮样式 */
.preview-btn {
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  background: linear-gradient(90deg, #ececec 0%, #daecfd 100%);
  color: rgb(37, 37, 37);
  padding: 16rpx 24rpx;
  border-radius: 48rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(123, 183, 250, 0.5);
  z-index: 100;
  display: flex;
  align-items: center;
}

/* 预览弹窗样式 */
.preview-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.98);
  z-index: 1000;
  display: flex;
  flex-direction: column;
  padding: 30rpx 20rpx;
}

.preview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  padding: 0 10rpx;
}

.close-btn {
  font-size: 50rpx;
  padding: 0 20rpx;
  color: #999;
}

/* 分组标签样式 */
.group-tabs {
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.tab-scroll {
  white-space: nowrap;
  width: 100%;
}

.tab-item {
  display: inline-block;
  padding: 15rpx 25rpx;
  margin-right: 10rpx;
  font-size: 26rpx;
  color: #666;
  border-radius: 8rpx 8rpx 0 0;
}

.tab-item.active {
  background: #f0f7ff;
  color: #1890ff;
  font-weight: bold;
  border-bottom: 4rpx solid #1890ff;
}

/* 题目列表样式 */
.preview-list {
  flex: 1;
  height: 100%;
}

.question-numbers {
  display: flex;
  flex-wrap: wrap;
  gap: 18rpx;
  padding: 10rpx;
}

.question-numbers .number {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f5f7fa;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #666;
  transition: all 0.2s;
}

.question-numbers .active {
  background: linear-gradient(135deg, #7bb7fa 0%, #393a7a 100%);
  color: #fff;
  font-weight: bold;
  transform: scale(1.1);
  box-shadow: 0 4rpx 12rpx rgba(123, 183, 250, 0.5);
}

.question-numbers .answered {
  background: #e1f5e8;
  color: #4caf50;
  font-weight: 500;
}

.question-numbers .answered.active {
  background: linear-gradient(135deg, #7bb7fa 0%, #393a7a 100%);
  color: #fff;
}